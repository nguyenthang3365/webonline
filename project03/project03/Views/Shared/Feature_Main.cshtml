@model IEnumerable<project03.Models.entiy.HangHoa>
<div class="content_bottom">
    <div class="heading">
        <h3>Feature Products</h3>
    </div>
    <div class="see">
        <p><a href="#">See all Products</a></p>
    </div>
    <div class="clear"></div>
</div>


    <div class="section group">
        @foreach (var item in Model)
        {
            <div class="grid_1_of_4 images_1_of_4">
                <a href="/shop/Detail_product?id=@item.MaHang"><img src="~/Content/images/@item.Anh" alt="" /></a>
                <h2>@item.TenHang </h2>
                <div class="price-details">
                    <div class="price-number">
                        <p><span class="rupees">@item.Gia</span></p>
                    </div>
                    <div class="add-cart">
                        <h4><a href="/Shop/cart?item=@item.MaHang">Add to Cart</a></h4>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        }
    </div>
